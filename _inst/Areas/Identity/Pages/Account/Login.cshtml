@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style>
    body 
    { 
        background: url("https://img1.akspic.ru/image/124040-socialnaya_set-instagram-kamera-video-logo-1920x1080.jpg"); 
        background-size: cover; 
        background-repeat: no-repeat; height: 100%; 
    }
    </style>

<div class="container ">
    <form form id="account" method="post" class="justify-content-center">
        <div class="form-row justify-content-center">
            <div class="col-sm-3 my-1">
                <input asp-for="Input.Email" class="form-control form-control-sm" placeholder="Почтовый адресс" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-sm-3 my-1">
                <input asp-for="Input.Password" class="form-control form-control-sm" placeholder="Пароль"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-auto my-1">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="col-auto my-1">
                <button type="submit" class="btn btn-primary btn-sm">Войти</button>
            </div>
        </div>
    </form>
</div>


@section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
